# General aliases
alias h="cd ~"
alias b="cd .."
alias c="clear"
alias n="nvim"
alias ll="ls -aliuh --color --group-directories-first"
alias kk="pkill"
alias ee="exit"
alias nz="nvim $HOME/.config/zsh/.zshrc"
alias nw="nvim $HOME/.config/wezterm/wezterm.lua"
alias nt="nvim $HOME/.config/tmux/tmux.conf"
alias ns="nvim $HOME/.config/omp/omp.toml"
alias mv="mv -i"
alias cp="cp -rvf"
alias aaa="sudo apt update && apt list --upgradable && sudo apt full-upgrade && sudo apt-get autoclean && sudo apt autoremove"
alias rrr="rm -rif"
alias top="htop"
alias grep="grep --color=auto"
